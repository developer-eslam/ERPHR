<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <android.support.v7.widget.CardView



            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp">

        <LinearLayout


            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

         <LinearLayout

             android:gravity="center"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/txtfirstname"
            android:textSize="@dimen/_9sdp"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/txtsceondname"
            android:textSize="@dimen/_9sdp"            />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/txtthirdname"
            android:textSize="@dimen/_9sdp"            />

        <TextView
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/txtfourthname"
            android:textSize="@dimen/_9sdp"     />


         </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/txtF_PK_SSN"
                    android:textSize="@dimen/_9sdp" />



            <LinearLayout
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="10dp">


            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/txtF_StreetAndBuilding"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/txtF_DateOfStopingSSN"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/txtF_Passport_Expired_Date"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/txtF_Status"
                android:textSize="@dimen/_9sdp" />
            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/txtF_Religion"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/txtF_Nationality"
                android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="#607D8B"
                />

        </LinearLayout>



        </android.support.v7.widget.CardView>



</LinearLayout>

